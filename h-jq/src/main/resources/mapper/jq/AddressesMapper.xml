<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.h.jq.mapper.AddressesMapper">
    
    <resultMap type="Addresses" id="AddressesResult">
        <result property="addressId"    column="address_id"    />
        <result property="cityId"    column="city_id"    />
        <result property="addressText"    column="address_text"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
    </resultMap>

    <sql id="selectAddressesVo">
        select address_id, city_id, address_text, created_at, updated_at from addresses
    </sql>

    <select id="selectAddressesList" parameterType="Addresses" resultMap="AddressesResult">
        <include refid="selectAddressesVo"/>
        <where>  
            <if test="cityId != null "> and city_id = #{cityId}</if>
            <if test="addressText != null  and addressText != ''"> and address_text = #{addressText}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>
    
    <select id="selectAddressesByAddressId" parameterType="Long" resultMap="AddressesResult">
        <include refid="selectAddressesVo"/>
        where address_id = #{addressId}
    </select>

    <insert id="insertAddresses" parameterType="Addresses" useGeneratedKeys="true" keyProperty="addressId">
        insert into addresses
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cityId != null">city_id,</if>
            <if test="addressText != null and addressText != ''">address_text,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cityId != null">#{cityId},</if>
            <if test="addressText != null and addressText != ''">#{addressText},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
         </trim>
    </insert>

    <update id="updateAddresses" parameterType="Addresses">
        update addresses
        <trim prefix="SET" suffixOverrides=",">
            <if test="cityId != null">city_id = #{cityId},</if>
            <if test="addressText != null and addressText != ''">address_text = #{addressText},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where address_id = #{addressId}
    </update>

    <delete id="deleteAddressesByAddressId" parameterType="Long">
        delete from addresses where address_id = #{addressId}
    </delete>

    <delete id="deleteAddressesByAddressIds" parameterType="String">
        delete from addresses where address_id in 
        <foreach item="addressId" collection="array" open="(" separator="," close=")">
            #{addressId}
        </foreach>
    </delete>
</mapper>